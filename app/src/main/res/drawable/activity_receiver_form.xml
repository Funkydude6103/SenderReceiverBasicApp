<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".ReceiverForm">

    <TextView
            android:id="@+id/textView"
            android:layout_width="413dp"
            android:layout_height="110dp"
            android:text="@string/reciever_deatils"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:background="@color/background"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0">


        <EditText
                android:id="@+id/etremail"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:hint="@string/sender_detail_email"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittextrounded"/>

        <EditText
                android:id="@+id/etrfullname"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:hint="@string/sender_detail_fullname"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:inputType="text"
                android:background="@drawable/edittextrounded"/>

        <EditText
                android:id="@+id/etrcontact"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:hint="@string/sender_detail_contact_information"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:inputType="phone"
                android:background="@drawable/edittextrounded"/>

        <EditText
                android:id="@+id/etrcountry"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:hint="@string/sender_detail_country"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:inputType="text"
                android:background="@drawable/edittextrounded"/>

        <EditText
                android:id="@+id/etraddress"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:hint="@string/sender_detail_address"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:inputType="text"
                android:background="@drawable/edittextrounded"/>

        <Button
                android:id="@+id/btnnext"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:layout_marginTop="24dp"
                 android:textSize="20sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
